<style>
  .container {
    width: 200px;
    height: 200px;
    perspective: 1000px;
    transform-style: preserve-3d;
    transform: rotate(-2deg);
  }

  .container img {
    width: 200px;
    height: 200px;
    object-fit: cover;
    object-position: 50% 50%;
    border-radius: 1rem;
    padding: 0.5rem;
    --tw-ring-offset-shadow: var(--tw-ring-inset) 0 0 0
      var(--tw-ring-offset-width) var(--tw-ring-offset-color);
    --tw-ring-shadow: var(--tw-ring-inset) 0 0 0
      calc(1px + var(--tw-ring-offset-width)) var(--tw-ring-color);
  }

  .flip-card {
    position: relative;
    transition: 0.8s;
    transform-style: preserve-3d;
  }

  .flip-card .front {
    position: absolute;
    top: 0;
    left: 0;
    backface-visibility: hidden;
    transition: 0.8s;
    transform-style: preserve-3d;
    border-radius: 1rem;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.5);
    width: 200px;
    height: 200px;
    z-index: 100;
  }

  .flip-card .back {
    position: absolute;
    top: 0;
    left: 0;
    backface-visibility: hidden;
    transition: 0.8s;
    transform-style: preserve-3d;
    z-index: 99;
    border-radius: 1rem;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.5);
    width: 200px;
    height: 200px;
    transform: rotateY(180deg);
  }

  .container:hover .front {
    transform: rotateY(-180deg);
  }

  .container:hover .back {
    transform: rotateY(0deg);
  }
</style>
