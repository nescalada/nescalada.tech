import LinkButton from "./LinkButton.astro";
import SubTitleSection from "@/components/SubTitleSection.astro";

const TAGS = {
  BACKEND: {
    name: "Backend",
    class: "bg-lime-900 text-white",
    icon: null,
  },
  FRONTEND: {
    name: "Frontend",
    class: "bg-fuchsia-900 text-white",
    icon: null,
  },
  DATABASES: {
    name: "Databases",
    class: "bg-blue-900 text-white",
    icon: null,
  },
  TESTING: {
    name: "Testing",
    class: "bg-teal-900 text-white",
    icon: null,
  },
  PATTERNSANDARCH: {
    name: "Patterns & Arch.",
    class: "bg-indigo-950 text-white",
    icon: null,
  },
  NETWORKINGPROTOCOLS: {
    name: "Network & Protocols",
    class: "bg-fuchsia-950 text-white",
    icon: null,
  },
  UML: {
    name: "UML",
    class: "bg-rose-950 text-white",
    icon: null,
  },
  GOLANG: {
    name: "Golang",
    class: "bg-sky-500 text-white",
    icon: null,
  },
  TYPESCRIPT: {
    name: "Typescript",
    class: "bg-blue-800 text-white",
    icon: null,
  },
  JAVA: {
